{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SampleStore;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Identity": {
        "Password": {
            "RequireDigit": true,
            "RequireLowercase": true,
            "RequireNonAlphanumeric": true,
            "RequireUppercase": true,
            "RequiredLength": 6,
            "RequiredUniqueChars": 1
        },
        "Lockout": {
            "DefaultLockoutTimeSpan": "00:05:00",
            "MaxFailedAccessAttempts": 3,
            "AllowedForNewUsers": true
        },
        "User": {
            "AllowedUserNameCharacters": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+",
            "RequireUniqueEmail": false
        },
        "SignIn": {
            "RequireConfirmedEmail": true,
            "RequireConfirmedPhoneNumber":  false
        }
    },
    "CookieAuthentication": {
        "HttpOnly": true,
        "ExpireTimeSpan": "00:05:00",
        "LoginPath": "/Identity/Account/Login",
        "AccessDeniedPath": "/Identity/Account/AccessDenied",
        "SlidingExpiration": true
    },
    "SuperAdminPrototype": {
        "Email": "superadmin@samplestore.com",
        "FullName": "Super Admin"
    },
    "SeederPassword":  "Password1!"
}
